<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="413dp"
        android:layout_height="60dp"
        android:height="60dp"
        android:background="#4CAF50"
        android:fontFamily="sans-serif-condensed-light"
        android:fontFeatureSettings="20dp"
        android:gravity="center"
        android:layerType="none"
        android:text="@string/music_shop"
        android:textAlignment="inherit"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="410dp"
        android:layout_height="42dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ListView
        android:id="@+id/names"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:cacheColorHint="#4CAF50"
        app:layout_constraintStart_toEndOf="@+id/_dynamic"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ListView
        android:id="@+id/counts"
        android:layout_width="81dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/names"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

    </ListView>

    <ListView
        android:id="@+id/totals"
        android:layout_width="160dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/counts"
        tools:layout_editor_absoluteY="102dp" />

    <Button
        android:id="@+id/byuButton"
        android:layout_width="409dp"
        android:layout_height="95dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#4CAF50"
        android:text="Купить"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>